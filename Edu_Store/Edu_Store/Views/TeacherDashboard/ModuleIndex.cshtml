@model IEnumerable<CourseModule>
@{
    ViewData["Title"] = "Module Index";
    Layout = "~/Views/Shared/_TeacherDashboard.cshtml";
}

<section class="content">
    <div class="container-fluid">
        @if ( Model.Count( ) != 0 )
        {
            <!-- Basic Table -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                YOUR COURSE Modules
                            </h2>
                            <br>
                            <p><a asp-action="CreateModule" asp-controller="TeacherDashboard" asp-route-id=" ViewBag.CourseID">Add new module</a></p>
                        </div>
                        <div class="body table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>COURSE TITLE</th>
                                        <th>MODULE TITLE</th>
                                        <th>DESCRIPTION</th>
                                        <th>TOTAL HOURES</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach ( var item in Model )
                                    {

                                        <tr>
                                            <th scope="row">@item.Course.Title</th>
                                            <td>@item.ModuleName</td>
                                            <td>@item.Description</td>
                                            <td><span>HR - </span>@item.TotalHour</td>
                                            <td>  <a asp-action="DeleteModule" asp-controller="TeacherDashboard" asp-route-moduleId="@item.Id" asp-route-courseID="@item.Course.CourseID">Delete</a>  |  <a asp-action="CreateLecture" asp-controller="TeacherDashboard" asp-route-courseID="@item.Course.CourseID" asp-route-moduleID="@item.Id">add lecture</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Basic Table -->
        }
        else
        {
            <h2>No courses yet | add a course from this <a asp-action="AddCourse" asp-controller="TeacherDashboard">LINK</a></h2>
        }


    </div>
</section>



