@model ModuleLecture
@{
    ViewData["Title"] = "Create Lecture";
    Layout = "~/Views/Shared/_TeacherDashboard.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2> CREATE NEW LECTURE FOR THE MODULE</h2>
        </div>
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            CREATE

                        </h2>
                        <br />
                        <p> <a asp-action="ModuleIndex" asp-route-courseID="@ViewBag.courseID" asp-route-moduleID="@ViewBag.moduleID">Back to List</a></p>
                    </div>
                    <div class="body">


                        <form action="/TeacherDashboard/CreateLecture" enctype="multipart/form-data"  method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <input type="text" asp-for="LectureName" class="form-control" placeholder="Title" />
                                            <span asp-validation-for="LectureName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <input type="number" asp-for="LectureTime_MS" class="form-control" placeholder="Description"/>
                                            <span asp-validation-for="LectureTime_MS" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <label class="control-label">lecture vedio</label>
                                            <input type="file" asp-for="videoFile" accept="video/mp4,video/x-m4v,video/*"  class="form-control" placeholder="total hour" />
                                            <span asp-validation-for="videoFile" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="ModuleID" value="@ViewBag.moduleID" />
                                    <div class="form-group form-group-lg">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input -->



    </div>



</section>

