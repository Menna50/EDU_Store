@model CourseModule
@{
    ViewData["Title"] = "Create Module";
    Layout = "~/Views/Shared/_TeacherDashboard.cshtml";
}




<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2> CREATE NEW MODULE FOR THE COURSE</h2>
        </div>
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            CREATE

                        </h2>
                        <br />
                        <p> <a asp-action="ModuleIndex" asp-asp-route-id="ViewBag.CourseID">Back to List</a></p>
                    </div>
                    <div class="body">


                        <form action="/TeacherDashboard/CreateModule" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <input type="text" asp-for="ModuleName" class="form-control" placeholder="Title" />
                                            <span asp-validation-for="ModuleName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <input asp-for="TotalHour" class="form-control" placeholder="total hour" />
                                            <span asp-validation-for="TotalHour" class="text-danger"></span>
                                        </div>
                                    </div>
                                        <input type="hidden" asp-for="CourseId" value="@ViewBag.CourseID" />
                                    <div class="form-group form-group-lg">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input -->



    </div>



</section>