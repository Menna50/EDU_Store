@model ModuleLecture
@{
    ViewData["Title"] = "DeleteLecture";
    Layout = "~/Views/Shared/_TeacherDashboard.cshtml";
}



<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>DEELETE THE LECTURE</h2>
        </div>
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            DEELETE

                        </h2>
                        <br />
                        <p> <a asp-action="LectureIndex" asp-route-moduleID="@Model.ModuleID" asp-route-courseID="@ViewBag.moduleId">Back to List</a></p>
                    </div>
                    <div class="body">


                        <form asp-action="DeleteLecture">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="LectureVedioPath"/>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <input type="text" asp-for="LectureName" class="form-control" placeholder="Title" readonly />
                                            <span asp-validation-for="LectureName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <textarea asp-for="LectureTime_MS" class="form-control" placeholder="Description" readonly></textarea>
                                            <span asp-validation-for="LectureTime_MS" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <div class="form-line">
                                            <video  controls style="width:inherit">
                                                <source src="@Model.vedioPath" >
 
                                                Your browser does not support the video tag.
                                            </video>

                                        </div>
                                    </div>

                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="ModuleID" />

                                    <div class="form-group form-group-lg">
                                        <input type="submit" value="Delete" class="btn btn-primary" />

                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input -->



    </div>



</section>

